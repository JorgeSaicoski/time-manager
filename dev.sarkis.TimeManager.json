{
  "app-id": "dev.sarkis.TimeManager",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "time-manager",
  "finish-args": [
    "--socket=wayland",
    "--socket=x11",
    "--share=ipc",
    "--device=dri",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "time-manager",
      "buildsystem": "simple",
      "build-options": {
        "env": {
          "GOROOT": "/usr/lib/sdk/golang",
          "NPM_CONFIG_USERCONFIG": "/tmp"
        },
        "append-path": "/usr/lib/sdk/golang/bin:/usr/lib/sdk/node18/bin",
        "no-internet": true
      },
      "build-commands": ["install -D time-manager /app/bin/time-manager"],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/JorgeSaicoski/time-manager.git",
          "branch": "main"
        }
      ]
    }
  ]
}
